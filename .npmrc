# pnpm configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=false
prefer-frozen-lockfile=true
save-exact=false
engine-strict=true

# Security
audit-level=moderate

# Performance
store-dir=~/.pnpm-store
cache-dir=~/.pnpm-cache

# Registry
registry=https://registry.npmjs.org/
